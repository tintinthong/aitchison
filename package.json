{
  "name": "aitchison",
  "version": "1.0.0",
  "description": "Typescript library for Aitchison Geometry and Compositional Data",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run build:clean && npm run build:start && npm run build:copy",
    "build:start": "tsc --strict --declaration --lib es2015 --outDir ./dist ./src/*.ts",
    "build:clean": "rm -rf dist && mkdir dist",
    "build:copy": "cp ./package.json ./dist/package.json && cp ./README.md ./dist/README.md",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "compositional",
    "aitchison",
    "geometry",
    "proportion",
    "data"
  ],
  "author": "Justin Thong",
  "license": "ISC",
  "dependencies": {
    "typescript": "^3.8.3"
  }
}
